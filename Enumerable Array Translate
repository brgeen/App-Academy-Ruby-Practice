def array_translate(array)
a = 0
b = 1
  
  while a < array.length

    print array[a] * array[b] 
  
    a += 2
    b += 2
    
  end
  
end


print array_translate(["Cat", 2, "Dog", 3, "Mouse", 1]); # => "CatCatDogDogDogMouse"
puts

print array_translate(["red", 3, "blue", 1]); # => "redredredblue"
puts
